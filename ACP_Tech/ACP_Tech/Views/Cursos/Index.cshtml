@model IEnumerable<ACP_Tech.Models.Curso>

@{
    ViewData["Title"] = "Cadastro";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class= "btn btn-default">Novo</a>    
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeCurso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CargaHoraria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCurso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CargaHoraria)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-default">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-default">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-default">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
